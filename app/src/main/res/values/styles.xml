<?xml version="1.0" encoding="utf-8"?>

<resources
    xmlns:tools="http://schemas.android.com/tools">


    <!-- Test Main Theme -->
    <style name="Theme.BudgetAppDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Colors.. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rally_primary_green</item>
        <item name="colorPrimaryVariant">@color/background_dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorOnError">@color/rally_orange</item>
        <item name="colorError">@color/rally_orange</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_dark_grey</item>

        <!-- Toolbar stuff -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionOverflowButtonStyle">@style/AppbarOverflowStyle</item>


        <item name="buttonStyle">@style/buttonDark</item>



    </style>














    <style name="buttonDark">
        <item name="android:backgroundTint">@color/rally_primary_green</item>
        <item name="android:textColor">@color/rally_primary_green</item>
        <item name="android:font">@font/roboto_condensed_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayoutDark" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="helperTextTextColor">@color/grey_text</item>
        <item name="endIconTint">@color/white</item>
        <!-- not working, something to do with theme.. -->
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeErrorColor">@color/red</item>
    </style>

    <!-- TextInputEditText -->
    <style name="TextInputEditTextDark">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/foreground_light_grey</item>

    </style>

    <!-- TextInputEditText Non-clickable -->
    <style name="TextInputNoClick" parent="@style/TextInputEditTextDark">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="TextInputNoClickEczarFont" parent="@style/TextInputNoClick">
        <item name="android:fontFamily">@font/eczar_regular</item>
    </style>

    <!-- Appbar Hamburger menu -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Overflow Button Style -->
    <style name="AppbarOverflowStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>


    <!-- Bottom Navigation Bar -->
    <style name="BottomNavFontStyle" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_condensed_regular</item>
    </style>

</resources>